<h1 class="text-center">News Detail</h1>


<div class="mt-4 mb-4">
    <div class="row">
        <div class="col-3">
            <ul class="list-group">
                <h4>News List</h4>
                {{#each news}}
                    <a class="list-group-item list-group-item-action list-hover" href="#"><li></li></a>
                {{/each}}
            </ul>
        </div>

        <div class="col-9">
            <div class="col-lg-12 detail-background">
                <img class="detail-img" src="{{news.image}}" alt="">
                <ul class="detail-info">
                    <p>Creation date: {{moment news.createdAt format="DD-MM-YYYY"}}</p>
                    <p class="detail-title">{{news.title}}</p>
                    <p>{{news.description}}</p>
                    <p>Author: {{news.author}}</p>
                </ul>
            </div>
        </div>
    </div>
</div>