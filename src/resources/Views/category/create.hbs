<body>
  <h1 class="text-center"><B> CREATE NEW CATEGORY </B></h1>
  <button onclick="document.getElementById('id01').style.display='block'" style="width:auto;">CREATE</button>
<div id="id01" class="modal">
  <form class="modal-content animate" action="/category/store" method="post">
    <div class="cacontainer">
      <span onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal">&times;</span>
    </div>
    <div class="container">
      <label for="name">Name</label>
      <input type="text" class="form-control" id="name" name="name" placeholder="Enter name" required></div>
      <input type="submit" value="Submit">
  </form>
</div>
<script>
var modal = document.getElementById('id01');
window.onclick = function(event) {
    if (event.target == modal) {
        modal.style.display = "none";
    }
}
</script>
</body>


