<h1 class="text-center"><b> CATEGORY </b></h1>

<div id="mySide" class="side">
    <a href="./category/create" id="C"><b><i> Create </i></b></a>
    <a href="./category/create.hbs" id="U"><b><i> Update </i></b></a>
    <a href="./category/create.hbs" id="D"><b><i> Delete </i></b></a></div>

<div class="panel panel-default">
    <div class="panel-body">
        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-categories">
            <thead style="background-color: black; color: rgb(173, 154, 173);">
                <tr>
                    <th style="width: 150px; text-align:center"><i>Category Code</i></th>
                    <th style="width: 250px; text-align:center"><i>Category Name</i></th>
                    <th style="width: 500px; text-align:center"><i>Description</i></th>
                    <th style="width: 100px; text-align:center"><i>Status</i></th>
                </tr>
            </thead>
            <tbody class="text-center">
                <div class="row">
                    {{#each category}}
                <tr class="odd">
                    <td>
                        <a href="/category/{{this.slug}}"></a>
                        <h>{{this.slug}}</h></td>
                    <td>
                        <a href="/category/{{this.slug}}">
                        <h5 class="card-title">{{this.name}}</h5></a></td>
                    <td><a href="/category/{{this.slug}}" class="btn btn-primary" style="background-color: #8B93FC"> Category Detail <P><h5 class="card-title">{{this.name}}</h5></P> </a>
                    <td><button type="button" class="btn btn-warning btn-circle" style="background-color: #DCCB97;"><i class="fa fa-edit"></i></button></td>
                </tr>
                    {{/each}}
                </div>
            </tbody>                    
        </table>                          
    </div>
</div>