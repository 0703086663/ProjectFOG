<button><a href="./category/create">Create</a></button>
<a href="./category/create.hbs">Update</a>
<a href="./category/create.hbs">Delete</a>

<div class="mt-4">
    <div class="row">
        {{#each category}}
        <div class="col-sm-6 col-lg-2">
            <div class="card">
                <a href="/category/{{this.slug}}">
                    <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
                    </a>
                    <h>Slug la: {{this.slug}}</h>
                    <div class="card-body">
                        <a href="/category/{{this.slug}}">
                            <h5 class="card-title">{{this.name}}</h5>
                        </a>
                        <p class="card-text">{{this.description}}</p>
                        <a href="/category/{{this.slug}}" class="btn btn-primary"> Category Detail </a>
                    </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>