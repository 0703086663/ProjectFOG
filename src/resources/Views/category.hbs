<h1>Category Layout</h1>

<ul class="listCategory">
    {{#each category}}
    <li>{{this.name}}</li>
    {{/each}}
</ul>

<div class="mt-4">
    <div class="row">
        {{#each category}}
        <div class="col-sm-6 col-lg-4">
            <div class="card">
                <a href="/category/{{this.slug}}">
                    <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
                    </a>
                    <h>Slug la: {{this.slug}}</h>
                    <div class="card-body">
                        <a href="/category/{{this.slug}}">
                            <h5 class="card-title">{{this.name}}</h5>
                        </a>
                        <p class="card-text">{{this.description}}</p>
                        <a href="#" class="btn btn-primary"> Category Detail </a>
                    </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>