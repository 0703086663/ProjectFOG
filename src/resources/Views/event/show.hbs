<h1 class="text-center">Event Detail</h1>


<div class="mt-4 mb-4">
    <div class="row">
        <div class="col-3">
            <ul class="list-group">
                <h4>Event List</h4>
                {{#each event}}
                    <a class="list-group-item list-group-item-action list-hover" href="/event/{{this.slug}}"><li>{{this.name}}</li></a>
                {{/each}}
            </ul>
        </div>

        <div class="col-9 col-sm-9 col-md-9 col-lg-9 column-fix">
            <div class="col-lg-12 detail-background event-background__detail">
                    <p class="detail-title detail-title__name detail-title__name--modify">{{event.name}}</p>
                <img class="detail-img event-detail__img" src="{{event.image}}" alt="">
                <ul class="detail-info event-detail__info">
                    <p class="event-detail__date">Creation date: {{moment event.createdAt format="DD-MM-YYYY"}}</p>
                    {{!-- <p class="detail-title detail-title__name">{{event.name}}</p> --}}
                    <p class="event-detail__des">{{event.description}}</p>
                    <p class="event-detail__author">Author: {{event.author}}</p>
                </ul>
            </div>
        </div>
    </div>
</div>