<h1 class="text-center">Event Detail</h1>


<div class="mt-4 mb-4">
    <div class="row">
        <div class="col-3">
            <ul class="list-group">
                <h4>Event List</h4>
                {{#each event}}
                    <a class="list-group-item list-group-item-action list-hover" href="/event/{{this.slug}}"><li>{{this.name}}</li></a>
                {{/each}}
            </ul>
        </div>

        <div class="col-9">
            <div class="col-lg-12 detail-background">
                <img class="detail-img" src="{{event.image}}" alt="">
                <ul class="detail-info">
                    <p>Creation date: {{moment event.createdAt format="DD-MM-YYYY"}}</p>
                    <p class="detail-title">{{event.name}}</p>
                    <p>{{event.description}}</p>
                    <p>Author: {{event.author}}</p>
                </ul>
            </div>
        </div>
    </div>
</div>